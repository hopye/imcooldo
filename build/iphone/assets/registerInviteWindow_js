function getUserInfo(){var e=txt_code.value;""!=e?check(e):alert("You must enter your invitation code. Want Access ? Email us at info@imcool.do")}function check(e){var i=Ti.Network.createHTTPClient(),t="http://imcool.do/iphone_service/check_invitation.php?action=check&code="+e;i.onload=function(){var e=JSON.parse(i.responseText),t=e[0].success,o=e[0].invitedBy,r=e[0].code;if(Ti.App.Properties.setString("invitedcode",r),"true"==t){var n=Ti.UI.createAlertDialog({title:"Success!",message:"You were invited by "+o+" with code "+r,buttonNames:["OK"]});registerWindow.open(),n.addEventListener("click",function(){Ti.API.log("ClickedOK")})}else if("false"==t){var a=Ti.UI.createAlertDialog({title:"Sorry!",message:"Code invalid to use",buttonNames:["OK"]});a.show()}else{var l=Ti.UI.createAlertDialog({title:"Error!",message:"It seems we are experiencing problems... please try again later.",buttonNames:["OK"]});l.show()}},i.open("GET",t),i.send()}var curWindow=Ti.UI.currentWindow,registerWindow=Ti.UI.createWindow({backgroundColor:"#F7F7F7",fullscreen:!1,url:"registerWindow.js",title:"Register"});Ti.include("animations.js");var b=Ti.UI.createButton({title:"<",top:"1%"});curWindow.leftNavButton=b,b.addEventListener("click",function(){curWindow.close({transition:Ti.UI.iPhone.AnimationStyle.FLIP_FROM_RIGHT})});var scrollView=Ti.UI.createScrollView({contentWidth:"auto",contentHeight:"auto",top:0,showVerticalScrollIndicator:!0,showHorizontalScrollIndicator:!0}),view=Ti.UI.createView({width:"100%",height:"auto",top:10,paddingBottom:15}),imglogo=Ti.UI.createImageView({image:"images/imcool_logo.png",top:"17%"}),lbl_text=Ti.UI.createLabel({font:{fontSize:12},color:"#336699",top:"48%",width:"80%",height:40,text:"This is a private network only. Want Access ? Email us at info@imcool.do",textAlign:Ti.UI.TEXT_ALIGNMENT_CENTER}),txt_code=Ti.UI.createTextField({font:{fontSize:16},borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"58%",width:"80%",height:40,hintText:"Invitation Code",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),btn_Register=Ti.UI.createButton({width:"80%",color:"#F94C5A",font:{fontSize:20,fontWeight:"bold"},height:40,top:"80%",title:"Get in!",backgroundColor:"#EEEEEE",borderRadius:10});btn_Register.addEventListener("click",getUserInfo),view.add(b),view.add(imglogo),view.add(lbl_text),view.add(txt_code),view.add(btn_Register),scrollView.add(view),curWindow.add(scrollView);