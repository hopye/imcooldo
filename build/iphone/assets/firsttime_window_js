var win=Ti.UI.currentWindow;Ti.include("animations.js");var registerInviteWindow=Ti.UI.createWindow({backgroundColor:"#F7F7F7",fullscreen:!1,url:"registerInviteWindow.js",title:"Invitation Code"}),forgotWindow=Ti.UI.createWindow({backgroundColor:"#F7F7F7",fullscreen:"true",url:"forgotWindow.js",title:"Forgot Password"}),v1=Ti.UI.createView({width:"100%",height:"100%"}),img=Ti.UI.createImageView({image:"images/imcool_logo.png",top:"17%"}),inputemail=Ti.UI.createTextField({borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"49%",width:"80%",height:40,hintText:"Email",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),inputpassword=Ti.UI.createTextField({borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"58%",passwordMask:!0,width:"80%",height:40,hintText:"Password"}),btn_login=Ti.UI.createButton({width:"80%",color:"#F94C5A",font:{fontSize:20,fontWeight:"bold"},height:40,top:"70%",title:"Sign in",backgroundColor:"#EEEEEE",borderRadius:10}),btn_register=Ti.UI.createButton({width:"80%",color:"#F94C5A",font:{fontSize:20,fontWeight:"bold"},height:40,top:"80%",title:"Register",backgroundColor:"#EEEEEE",borderRadius:10});btn_register.addEventListener("click",function(){registerInviteWindow.open({transition:Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT})});var btn_forgot=Ti.UI.createButton({width:"80%",color:"#AAAAAA",font:{fontSize:20,fontWeight:"regular"},height:40,top:"90%",title:"Forgot Password"});btn_forgot.addEventListener("click",function(){forgotWindow.open({animated:!0})}),btn_login.addEventListener("click",function(){Ti.API.info("You clicked login")}),btn_register.addEventListener("click",function(){Ti.API.info("You clicked register")}),btn_forgot.addEventListener("click",function(){Ti.API.info("You clicked forgot")}),v1.add(img,inputemail,inputpassword,btn_login,btn_register,btn_forgot),win.add(v1);