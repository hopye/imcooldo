function getUserInfo(){var e=txt_Email.value,t=txt_User.value,i=txt_Pass1.value,o=txt_Pass2.value;i==o?registerUser(e,t,i):alert("Your passwords do not match.")}function registerUser(email,user,pass){var request=Ti.Network.createHTTPClient(),url="http://localhost/mobile.php?action=add_user&email="+email+"&user="+user+"&pass="+pass;request.open("GET",url),request.onload=function(){var arrData=[];arrData=eval("("+this.responseText+")");var result=arrData[0].result;if("true"==result){var alrt_Success=Ti.UI.createAlertDialog({title:"Success!",message:"You have successfuly created a new account. Now you can log in.",buttonNames:["OK"]});alrt_Success.show()}else if("another_user"==result){var alrt_Sorry=Ti.UI.createAlertDialog({title:"Sorry!",message:"According to our database, that username is already in use.",buttonNames:["OK"]});alrt_Sorry.show()}else{var alrt_Fail=Ti.UI.createAlertDialog({title:"Error!",message:"It seems we are experiencing problems... please try again later.",buttonNames:["OK"]});alrt_Fail.show()}},request.send()}var curWindow222=Ti.UI.currentWindow,scrollView=Ti.UI.createScrollView({contentWidth:"auto",contentHeight:"auto",top:0,showVerticalScrollIndicator:!0,showHorizontalScrollIndicator:!0}),view=Ti.UI.createView({width:"100%",height:"auto",top:10,paddingBottom:15}),imglogo=Ti.UI.createImageView({image:"images/imcool_logo.png",top:"17%"}),txt_Email=Ti.UI.createTextField({font:{fontSize:16},top:40,borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"49%",width:"80%",height:40,hintText:"Email",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),txt_User=Ti.UI.createTextField({font:{fontSize:16},top:40,borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"40%",width:"80%",height:40,hintText:"Username",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),txt_Pass1=Ti.UI.createTextField({passwordMask:!0,font:{fontSize:16},top:40,borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"58%",width:"80%",height:40,hintText:"Password",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),txt_Pass2=Ti.UI.createTextField({passwordMask:!0,font:{fontSize:16},top:40,borderStyle:Ti.UI.INPUT_BORDERSTYLE_ROUNDED,color:"#336699",clearOnEdit:!0,top:"67%",width:"80%",height:40,hintText:"Repeat Password",autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE}),btn_Register=Ti.UI.createButton({width:"80%",color:"#F94C5A",font:{fontSize:20,fontWeight:"bold"},height:40,top:"80%",title:"Register",backgroundColor:"#EEEEEE",borderRadius:10});btn_Register.addEventListener("click",getUserInfo),view.add(imglogo),view.add(txt_Email),view.add(txt_User),view.add(txt_Pass1),view.add(txt_Pass2),view.add(btn_Register),scrollView.add(view),curWindow222.add(scrollView);