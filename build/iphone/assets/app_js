var MyGlobal={email:null,name:null,lastname:null,invitedBy:null,username:null,invitedcode:null},firsttime_window=Ti.UI.createWindow({backgroundColor:"#F7F7F7",fullscreen:"true",url:"firsttime_window.js"}),usernamedata="hopye",passdata="root1515",db=Ti.Database.open("imcooldb"),rs=db.execute("CREATE TABLE IF NOT EXISTS user (username TEXT, password TEXT)"),deleteall=db.execute("DELETE FROM  user"),userRS=db.execute("SELECT username,password FROM user");if(1>userRS.getRowCount())firsttime_window.open();else{for(;userRS.isValidRow();){var userName=userRS.fieldByName("username"),userPass=userRS.fieldByName("password"),disp=Ti.API.info(userName+" "+userPass);alert("user : "+userName+"pass: "+userPass),userRS.next()}userRS.close(),db.close(),Ti.UI.setBackgroundColor("#FFF");var tabGroup=Ti.UI.createTabGroup({tabsTintColor:"#F35656",backgroundColor:"#F7F7F7"}),homeWindow=Ti.UI.createWindow({title:"Home",backgroundColor:"#FFF",url:"homeWindow.js"}),universeWindow=Ti.UI.createWindow({title:"Universe",backgroundColor:"#FFF",url:"universeWindow.js"}),connectWindow=Ti.UI.createWindow({title:"Connect",backgroundColor:"#FFF",url:"connectWindow.js"}),meWindow=Ti.UI.createWindow({title:"me",backgroundColor:"#FFF",url:"meWindow.js"}),homeTab=Ti.UI.createTab({icon:"icons/home.png",activeIcon:"icons/home2.png",title:"Home",window:homeWindow}),universeTab=Ti.UI.createTab({icon:"icons/universe.png",title:"Universe",window:universeWindow}),connectTab=Ti.UI.createTab({icon:"icons/connect.png",title:"Connect",window:connectWindow}),meTab=Ti.UI.createTab({icon:"icons/me.png",title:"Me",window:meWindow});tabGroup.addTab(homeTab),tabGroup.addTab(universeTab),tabGroup.addTab(connectTab),tabGroup.addTab(meTab),tabGroup.open()}